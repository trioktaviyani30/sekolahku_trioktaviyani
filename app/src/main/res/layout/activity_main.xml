<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:fitsSystemWindows="true"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"

        android:layout_height="192dp"
        android:background="#784949"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"

            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:background="#9FE8A2"></androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                app:srcCompat="@drawable/sa" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:gravity="center"
                android:text="SMK SYAFI'I AKROM"
                android:textColor="#3C4A2C"
                android:textSize="30sp"
                android:textStyle="italic" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_gravity="bottom"

        android:background="#204722"
        app:behavior_overlapTop="32dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="185dp"
                        android:layout_height="155dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#4CAF50"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/kejuruan" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="KEJURUAN"
                            android:textColor="#131313"
                            android:textSize="20dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="189dp"
                        android:layout_height="155dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#8CA18D"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gallery" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_gravity="bottom|center"
                            android:text="GALLERY"
                            android:textColor="#131313"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="155dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#8BBA8D"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="140dp"
                            android:layout_height="111dp"
                            android:layout_gravity="center|top"
                            app:srcCompat="@drawable/lokasi" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_gravity="bottom|center"
                            android:text="LOKASI"
                            android:textColor="#020202"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="155dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#8BED8F"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/schl" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="186dp"
                            android:layout_height="39dp"
                            android:layout_gravity="bottom|center"
                            android:gravity="bottom|center"
                            android:text="HALAMAN SEKOLAH"
                            android:textColor="#0E0D0D"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="189dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#D359A15C"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="match_parent"
                            android:layout_height="112dp"
                            app:srcCompat="@drawable/kegiatan" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_gravity="bottom|center"
                            android:text="KEGIATAN SEKOLAH"
                            android:textColor="#0E0C0C" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="183dp"
                        android:layout_height="155dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#9CC171"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="match_parent"
                            android:layout_height="106dp"
                            app:srcCompat="@drawable/JADWAL" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="92dp"
                            android:layout_height="39dp"
                            android:layout_gravity="bottom|center"
                            android:text="JADWAL"
                            android:textColor="#1B1B1B"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    "

</androidx.coordinatorlayout.widget.CoordinatorLayout>